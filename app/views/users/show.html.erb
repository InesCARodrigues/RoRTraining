<div class="row">
    <div class="col-md-2 text-center">
        <%= image_tag @user.profile.avatar.url, class: 'avatar-shadow avatar-border' %>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%=  @user.profile.last_name %> </h1>
        <h3><span class="job-icon"><%= job_icon %></span> <%= @user.profile.job_title %></h3>
        <div class="well profile-descr">
            <h4>Description</h4>
            <%= @user.profile.description %>
        </div>
    </div>
</div>


