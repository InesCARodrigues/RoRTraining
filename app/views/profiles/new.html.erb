<!-- User profile -->

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Your profile</h1>
        <p class="text-center">Create your awesome profile here!</p>
        <div class="well">
            
            <%= form_for @profile, url: user_profile_path do |f| %>
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :job_title %>
                    <%= f.select :job_title, ['developer','designer','computer nerd'],{}, class: "form-control" %>
                </div>
                 <div class="form-group">
                    <%= f.label :phone_number %>
                    <%= f.text_field :phone_number, class: "form-control" %>
                </div>
                 <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: "form-control" %>
                </div>
                
                <div class="form-group">
                    <%= f.button :submit, class: "btn btn-primary btn-lg btn-block" %>
                </div>
            <% end %>
            
        </div>
    </div>
</div>