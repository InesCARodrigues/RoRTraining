<div class="row">
  
  <div class="col-md-6 col-md-offset-3">
        <% if params[:plan] == '1' %>
          <h1 class="text-center">Basic Plan</h1>
          <h4 class="text-center"> Sign up for free to access to stuffs :3</h4>
        <% else %>
          <h1 class="text-center">Pro Plan</h1>
          <h4 class="text-center"> You pay and you get exclusive stuffs! :3</h4>
        <% end %>
  </div>
  
  <div class="col-md-6 col-md-offset-3 well">
    <h2>Sign up</h2>
     
     
     <% if params[:plan] == '1' %>
       <%= render "basic_form" %>  <!-- This is a partial -->
      <% else %>
        <%= render "pro_form" %>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>